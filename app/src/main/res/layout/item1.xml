<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />

    <LinearLayout
        android:id="@+id/ll_item_myshoppingcar_ptrlv_shop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/iv_item_myshoppingcar_ptrlv_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_item_myshoppingcar_ptrlv_shopName"
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:text="德惠世家汽车保养" />

        <ImageView
            android:id="@+id/iv_item_myshoppingcar_ptrlv_star1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="#00ff00" />

        <ImageView
            android:id="@+id/iv_item_myshoppingcar_ptrlv_star2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="3dp"
            android:background="#00ff00" />

        <ImageView
            android:id="@+id/iv_item_myshoppingcar_ptrlv_star3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="3dp"
            android:background="#00ff00" />

        <ImageView
            android:id="@+id/iv_item_myshoppingcar_ptrlv_star4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="3dp"
            android:background="#00ff00" />

        <ImageView
            android:id="@+id/iv_item_myshoppingcar_ptrlv_star5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="3dp"
            android:background="#00ff00" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        />

    <com.ruanmeng.swipemenulistview.SwipeMenuListView
        android:id="@+id/lv_item_myShoppingCar_ptrlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:focusable="false"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        />

</LinearLayout>